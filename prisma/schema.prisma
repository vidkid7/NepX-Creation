// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  EDITOR
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String?
  role      Role     @default(ADMIN)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model SiteContent {
  id        String   @id @default(cuid())
  section   String   @unique
  content   Json
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Service {
  id          String   @id @default(cuid())
  title       String
  description String   @db.Text
  icon        String
  features    Json
  gradient    String   @default("from-primary to-accent")
  order       Int      @default(0)
  active      Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Project {
  id           String   @id @default(cuid())
  title        String
  description  String   @db.Text
  image        String
  category     String
  technologies Json
  link         String?
  githubLink   String?
  featured     Boolean  @default(false)
  order        Int      @default(0)
  active       Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Testimonial {
  id        String   @id @default(cuid())
  name      String
  role      String
  company   String
  quote     String   @db.Text
  image     String?
  rating    Int      @default(5)
  order     Int      @default(0)
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Technology {
  id        String   @id @default(cuid())
  name      String
  category  String
  icon      String   @default("ðŸ”§")
  expertise Int      @default(80)
  color     String
  order     Int      @default(0)
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model SiteSettings {
  id        String   @id @default(cuid())
  key       String   @unique
  value     Json
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ContactSubmission {
  id        String   @id @default(cuid())
  name      String
  email     String
  subject   String
  message   String   @db.Text
  read      Boolean  @default(false)
  createdAt DateTime @default(now())
}

model Course {
  id               String   @id @default(cuid())
  title            String
  shortDescription String   @db.Text
  category         String
  level            String
  duration         String
  projects         Int
  mode             Json     // Array of strings: ["Online", "Offline"]
  priceOnline      Int
  priceOffline     Int?
  icon             String   @default("BookOpen")
  gradient         String   @default("from-blue-500 to-cyan-500")
  curriculum       Json     // Array of curriculum modules
  tools            Json     // Array of tool names
  features         Json     // Array of feature strings
  popular          Boolean  @default(false)
  order            Int      @default(0)
  active           Boolean  @default(true)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}
